<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

<figure>
  <%= image_tag @product.photo, {width: 200} %>
</figure>

<% if user_signed_in? %>
  <span>This is your affiliate code:</span>
  <input type="text" readonly value="<%= get_affiliate_code(@product, current_user) %>">
  <br>
<% else %>
  <p>You must be signed in to see the product's affiliate code.</p>
<% end %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
